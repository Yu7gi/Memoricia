<div class="container mt-5">
  <div class="row d-flex justify-content-center align-items-center flex-column w-100">
    <div class="col-md-7">

      <div class="stich mt-5 mx-auto">
        <div class="mt-5 row d-flex justify-content-center">
          <h2>ログイン</h2>
        </div>

        <%= form_with model: @user, url: user_session_path do |f| %>

          <div class="form-group mt-4">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
          </div>

          <div class="row d-flex justify-content-center mt-5">
            <button type="submit" class="btn background_btn">Log in</button>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= link_to new_user_registration_path, class: "circle_btn" do %>
          <span>新規登録</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
